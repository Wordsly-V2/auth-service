generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model UserLogin {
  id             String @id @db.Uuid
  providerUserId String @unique @map("provider_user_id")
  provider       String @map("provider")

  status String @map("status")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  users        User[]
  refreshToken RefreshToken[]

  @@map("user_logins")
}

model User {
  id String @id @db.Uuid

  userLoginId String    @unique @map("user_login_id") @db.Uuid
  userLogin   UserLogin @relation(fields: [userLoginId], references: [id])

  gmail       String? @unique
  displayName String  @map("display_name")
  pictureUrl  String? @map("picture_url")

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@index([userLoginId])
  @@map("users")
}

model RefreshToken {
  id String @id @default(uuid())

  userLoginId String    @unique @map("user_login_id") @db.Uuid
  userLogin   UserLogin @relation(fields: [userLoginId], references: [id])

  token       String  @unique
  jwtId       String  @unique @map("jwt_id")
  allocatedIp String? @map("allocated_ip")

  revokedAt DateTime? @map("revoked_at") @db.Timestamptz

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@index([userLoginId])
  @@map("refresh_tokens")
}
